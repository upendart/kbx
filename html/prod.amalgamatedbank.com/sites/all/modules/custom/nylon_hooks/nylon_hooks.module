// Encrypt Function
function mc_encrypt($encrypt, $key){
	//Resource: http://code.runnable.com/UmmNdePavBUxAABZ/php-mcrypt-basic-encryption-and-decryption-of-a-string
	// Create the initialization vector for added security.
	//$iv = mcrypt_create_iv(mcrypt_get_iv_size(MCRYPT_RIJNDAEL_256, MCRYPT_MODE_ECB), MCRYPT_RAND);
	$iv = '@q98ˆæÛ»ØÑ[Y·Úüw/(ŠþÅdLXƒµ	kðÃ	Ÿ';
	$encrypted_string = mcrypt_encrypt(MCRYPT_RIJNDAEL_256, $key, $encrypt, MCRYPT_MODE_CBC, $iv);
	$base_64_encoded_encrypted_string = base64_encode($encrypted_string);
	return $base_64_encoded_encrypted_string;
}

// Decrypt Function
function mc_decrypt($decrypt, $key){
	// Create the initialization vector for added security.  Must be the same as encyrpt function
	$iv = '@q98ˆæÛ»ØÑ[Y·Úüw/(ŠþÅdLXƒµ	kðÃ	Ÿ';
	$base_64_decoded_encrypted_string = base64_decode($decrypt);
	$decrypted_string = mcrypt_decrypt(MCRYPT_RIJNDAEL_256, $key, $base_64_decoded_encrypted_string, MCRYPT_MODE_CBC, $iv);
	return $decrypted_string;
}

// Get environment name
function get_environment(){
    
	$the_environment = '';
	
	if(strpos($_SERVER['HTTP_HOST'], 'amalgamatedbank.local') !== false){
		$the_environment = 'local';
	} 
	elseif(strpos($_SERVER['HTTP_HOST'], 'staging.amalgamated.nt-nyc.com') !== false) {
		$the_environment = 'staging';
	}
	elseif(strpos($_SERVER['HTTP_HOST'], 'amalgamatedbank.com') !== false) {
		$the_environment = 'production';
	}
	return $the_environment;
}

